{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ post.category }}</td>
            </tr>
            <tr>
                <th>Hotness</th>
                <td>{{ post.hotness }}</td>
            </tr>
            <tr>
                <th>Vegan</th>
                <td>{{ post.vegan }}</td>
            </tr>
            <tr>
                <th>Gluten</th>
                <td>{{ post.gluten }}</td>
            </tr>
            <tr>
                <th>Expiration</th>
                <td>{% if post.expiration %}{{ post.expiration|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('post_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('post_edit', { 'id': post.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
