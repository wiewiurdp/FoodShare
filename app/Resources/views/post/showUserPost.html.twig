{% extends 'base.html.twig' %}

{% block body %}
    {% import 'post/_macros.html.twig' as siteMacros %}
    <div class="row">
        <div class="col-8 offset-1">
            <h1>Lista ogłoszeń użytkownika <b>{{ posts[0].user.username }}</b></h1>
            <table class="table">
                <thead>
                <tr>
                    <th>Użytkownik</th>
                    <th>
                        {{ siteMacros.ordered('title',order, direction, 'Tytuł') }}
                    </th>
                    <th>
                        {{ siteMacros.ordered('category',order, direction, 'Kategoria') }}
                    </th>
                    <th>
                        {{ siteMacros.ordered('subCategory',order, direction, 'Podkategoria') }}
                    </th>
                    <th>
                        {{ siteMacros.ordered('expiration',order, direction, 'Termin Przydatności') }}
                    </th>
                    <th>Składniki które zawiera potrawa:</th>
                    <th>Ilość porcji</th>
                    <th>Zdjęcie</th>
                </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.user.username }}</td>
                        <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.title }}</td>
                        <td>{{ post.category }}</td>
                        <td>{{ post.subCategory }}</td>
                        <td>{% if post.expiration %}{{ post.expiration|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>
                            {% for ingredient in post.ingredients %}
                                {{ ingredient.getName }},
                            {% endfor %}
                        </td>
                        <td>{{ post.portions }}</td>
                        <td>
                            {% if (post.photo) %}
                                <img src="{{ asset('uploads/images/') ~ post.photo }}" class="imageSize">
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('post_new') }}">Create a new post</a>

        </li>
        <li>
            <a href="{{ path('post_index') }}">Back</a>
        </li>
    </ul>
{% endblock %}
